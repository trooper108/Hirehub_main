<div class="home1-featured-area mb-120" id="latestJobs">
    <div class="container">
        <div class="row mb-60">
            <div class="col-12 d-flex flex-wrap align-items-end justify-content-md-between justify-content-start gap-3">
                <div class="section-title1">
                    <h2>Latest <span>Featured</span> Jobs</h2>
                    <p>To choose your trending job dream & to make future bright.</p>
                </div>
                <div class="explore-btn">
                    <a href="/jobs">Explore More <span><img src="/assets/images/icon/explore-elliose.svg"
                                alt=""></span></a>
                </div>
            </div>
        </div>
        <div class="row g-4">
            <% for(let job of recentJobs){ %>
            <div class="col-xl-4 col-lg-6">
                <div class="feature-card">
                    <div class="company-area">
                        <div class="logo">
                            <img src="<%= job.logo %>" alt="">
                        </div>
                        <div class="company-details">
                            <div class="name-location">
                                <h5><a href="/jobs/<%= job._id %>"><%= job.jobName %> - <%= job.companyName %></a></h5>
                                <p><%= job.time %></p>
                            </div>
                        </div>
                    </div>
                    <div class="job-discription">
                        <ul>
                            <li>
                                <img src="/assets/images/icon/arrow2.svg" alt="">
                                <p><span class="title">Salary:</span> <%= job.stipend %><span class="time"></span>
                                </p>
                            </li>
                            <li>
                                <img src="/assets/images/icon/arrow2.svg" alt="">
                                <p><span class="title">Deadline:</span> <span> <%= job.deadline.toDateString() %></span>
                                </p>
                            </li>
                        </ul>
                    </div>
                    <div class="job-type-apply">
                        <div class="apply-btn">
                            <a href="/jobs/<%= job._id %>"><span><img src="/assets/images/icon/apply-ellipse.svg"
                                        alt=""></span>Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
