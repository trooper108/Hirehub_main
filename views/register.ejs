<%- include('./partials/header'); -%>
<div class="register-area pt-120 mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-wrapper">
                    <div class="form-title">
                        <h3>Register Account</h3>
                        <span></span>
                    </div>
                    <div class="register-tab">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                aria-labelledby="nav-home-tab">
                                <form action="/register" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="firstname1">First Name*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/user-2.svg" alt="">
                                                    <input type="text" id="firstname1" name="user[firstName]"
                                                        placeholder="John" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="lastname1">Last Name*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/user-2.svg" alt="">
                                                    <input type="text" id="lastname1" name="user[lastName]"
                                                        placeholder="Doe" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="branch">Branch*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/user-2.svg" alt="">
                                                    <input type="text" id="branch" name="user[branch]" placeholder="CO"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="email">Email*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/email-2.svg" alt="">
                                                    <input type="text" id="email" name="user[username]"
                                                        placeholder="info@example.com" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="cgpa">CGPA*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/company-2.svg" alt="">
                                                    <input type="text" id="cgpa" name="user[cgpa]" placeholder="10"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="grad">Graduation Year*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/company-2.svg" alt="">
                                                    <input type="text" id="grad" name="user[graduationYear]"
                                                        placeholder="2023" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="university">University*</label>
                                                <div class="input-area">
                                                    <img src="/assets/images/icon/company-2.svg" alt="">
                                                    <input type="text" id="university" name="user[university]"
                                                        placeholder="Delhi Technological University" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-inner mb-25">
                                                <label for="password">Password*</label>
                                                <input type="password" name="password" id="password"
                                                    placeholder="Password" required />
                                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div
                                                class="form-agreement form-inner d-flex justify-content-between flex-wrap">
                                                <div class="form-group two">
                                                    <input type="checkbox" id="html1" required>
                                                    <label for="html1">*Here, I will agree company terms &
                                                        conditions.</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-inner">
                                                <button class="primry-btn-2" type="submit">Sign Up</button>
                                            </div>
                                        </div>
                                        <h6>Already have an account? <a href="/login"> Login</a> Here</h6>
                                        <div class="login-difarent-way">
                                            <div class="row g-4">
                                                <div class="col-md-6">
                                                    <a href="#"><img src="/assets/images/icon/google1.svg" alt="">Log in
                                                        with
                                                        Google</a>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="#"><img src="/assets/images/icon/facebook1.svg" alt="">Log
                                                        in with
                                                        Facebook</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 d-flex justify-content-md-start justify-content-center">
