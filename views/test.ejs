<%- include('./partials/userHeader'); -%>

<div class="show-page">
	<div style="padding-top: 100px; padding-bottom: 150px; background-image: url(/images/test.png); background-repeat: no-repeat; background-position: 50% 25%;"
		class="online-cv section-overly pt-90 pb-120">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-10">
					<div class="cv-caption text-center">
						<p class="pera2 mt-5">
							MCQ Test
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8">
				<% if(/*job.questions.length < 10*/false){ %>
				<div class="mt-3 lead fs-2 text-center">
					The test is not ready yet, please visit some other time.
					<p><a href="/jobs/<%= job._id %>" class="mt-3 btn btn-lg btn-outline-danger">Go Back</a></p>
				</div>
				<% } else { %>
				<form class="form-check" action="/jobs/<%=job._id%>/test/<%=user._id%>" method="POST">
					<% for(let i=0;i<job.questions.length;i++){ %>
					<p class="mt-4 lead fs-4">
						<span>Question No. <%=i+1%> : </span><%=job.questions[i].description%>
					</p>
					<input class="ms-2 form-check-input" type="radio" id="options1<%=i%>" name="option[<%=i%>]"
						value="option1" required>
					<label class="ms-2 form-check-label" for="options1<%=i%>">
						<%=job.questions[i].option1%></label><br>
					<input class="ms-2 form-check-input" type="radio" id="options2<%=i%>" name="option[<%=i%>]"
						value="option2">
					<label class="ms-2 form-check-label" for="options2<%=i%>">
						<%=job.questions[i].option2%></label><br>
					<input class="ms-2 form-check-input" type="radio" id="options3<%=i%>" name="option[<%=i%>]"
						value="option3">
					<label class="ms-2 form-check-label" for="options3<%=i%>">
						<%=job.questions[i].option3%></label><br>
					<input class="ms-2 form-check-input" type="radio" id="options4<%=i%>" name="option[<%=i%>]"
						value="option4">
					<label class="ms-2 form-check-label" for="options4<%=i%>">
						<%=job.questions[i].option4%></label><br>
					<hr>
					<% } %>
					<button class="mt-4 btn btn-danger" type="submit">Submit</button>
				</form>
				<% } %>
			</div>
		</div>
	</div>
</div>
<%- include('./partials/footer'); -%>